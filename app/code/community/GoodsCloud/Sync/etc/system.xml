<?xml version="1.0"?>
<config>
    <sections>
        <goodscloud_sync translate="label" module="goodscloud_sync">
            <label>GoodsCloud</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>900</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <basic>
                    <label>Basic Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <username>
                            <label>Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </username>
                        <password>
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password>
                    </fields>
                </basic>
                <shop>
                    <label>Shop Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <identifier_attribute>
                            <label>Identifier Attribute</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Product attribute which contains the EAN/GNIT/UPC</comment>
                            <source_model>goodscloud_sync/source_product_attributes</source_model>
                        </identifier_attribute>
                        <identifier_type>
                            <label>Identifier Type</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Type of identifier: GNIT, UPC or EAN</comment>
                            <source_model>goodscloud_sync/source_identifierType</source_model>
                        </identifier_type>
                    </fields>
                </shop>
                <advanced>
                    <label>Advanced Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <base_url>
                            <label>BaseURL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </base_url>
                    </fields>
                </advanced>
            </groups>
        </goodscloud_sync>
        <fastsimpleimport module="fastsimpleimport">
            <class>separator-top</class>
            <label>Fast Simple Import</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general>
                    <fields>
                        <import_behavior>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </import_behavior>
                        <support_nested_arrays>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </support_nested_arrays>
                        <clear_field_on_empty_string>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clear_field_on_empty_string>
                        <goodscloud_note>
                            <label>Goodscloud Information</label>
                            <frontend_type>hidden</frontend_type>
                            <comment>Settings partially disabled by Goodscloud Sync Extension.</comment>
                            <show_in_default>1</show_in_default>
                            <sort_order>500</sort_order>
                        </goodscloud_note>
                    </fields>
                </general>
            </groups>
        </fastsimpleimport>
    </sections>
</config>
